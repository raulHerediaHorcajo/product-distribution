# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Frontend (TypeScript, JavaScript, JSON, HTML, CSS, SCSS)
[*.{ts,js,json,html,css,scss}]
indent_size = 2
quote_type = single

# Backend (Java)
[*.java]
indent_size = 4

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false
